#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n, count = 0;
    scanf("%d", &n);

    printf("Enter a number\n");
    printf("%d\n", n);

    while (n != 1) {
        if (n % 2 == 0) {
            n = n / 2;
        } else {
            n = 3 * n + 1;
        }
        printf("%d\n", n);
        count++;
    }

    printf("count:%d\n", count);
    return 0;
}

