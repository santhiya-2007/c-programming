#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main() 
{
    int hr,min,sec;
    scanf("%d",&hr);
    scanf("%d",&min);
    scanf("%d",&sec);
    min=min+sec/60;
    sec=sec%60;
    hr=hr+min/60;
    min=min%60;
    printf("Total number of hours is %d\n",hr);
    printf("Total number of minutes is %d\n",min);
    printf("Total number of seconds is %d\n",sec);
return 0;
}
